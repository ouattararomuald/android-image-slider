<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable name="ImageSlider">
    <!-- Determines whether or not the ImageSlider should recover after user touch event. -->
    <attr name="autoRecoverAfterTouchEvent" format="boolean"/>
    <!-- Determines whether or not the ImageSlider should immediately starts its transitions. -->
    <attr name="initWithAutoCycling" format="boolean"/>
    <!-- Reference to a background to be applied to Slider's indicator. -->
    <attr name="indicatorBackground" format="reference"/>
    <!-- Delay in milliseconds before the first slide change. -->
    <attr name="initialSlideDelay" format="integer"/>
    <!-- Reference to a background to be applied to Slider. -->
    <attr name="sliderBackground" format="reference"/>
    <!-- Time in milliseconds between successive slide changes. -->
    <attr name="slideTransitionInterval" format="integer"/>
    <!-- Color of the filled circle that represents the current page. -->
    <attr name="indicatorFillColor" format="color" />
    <!-- Color of the filled circles that represents pages. -->
    <attr name="indicatorPageColor" format="color" />
    <!-- Radius of the circles. This is also the spacing between circles. -->
    <attr name="indicatorRadius" format="dimension" />
    <!-- Whether or not the selected indicator snaps to the circles. -->
    <attr name="indicatorSnap" format="boolean" />
    <!-- Color of the open circles. -->
    <attr name="indicatorStrokeColor" format="color" />
    <!-- Width of the stroke used to draw the circles. -->
    <attr name="indicatorStrokeWidth" format="dimension" />
    <!-- Indicators left margin size. -->
    <attr name="indicatorsLeftMargin" format="dimension" />
    <!-- Indicators top margin size. -->
    <attr name="indicatorsTopMargin" format="dimension" />
    <!-- Indicators right margin size. -->
    <attr name="indicatorsRightMargin" format="dimension" />
    <!-- Indicators bottom margin size. -->
    <attr name="indicatorsBottomMargin" format="dimension" />
  </declare-styleable>


  <declare-styleable name="CirclePageIndicator">
    <!-- Whether or not the indicators should be centered. -->
    <attr name="centered" format="boolean" />
    <!-- Color of the filled circle that represents the current page. -->
    <attr name="fillColor" format="color" />
    <!-- Color of the filled circles that represents pages. -->
    <attr name="pageColor" format="color" />
    <!-- Orientation of the indicator. -->
    <attr name="android:orientation"/>
    <!-- Radius of the circles. This is also the spacing between circles. -->
    <attr name="radius" format="dimension" />
    <!-- Whether or not the selected indicator snaps to the circles. -->
    <attr name="snap" format="boolean" />
    <!-- Color of the open circles. -->
    <attr name="strokeColor" format="color" />
    <!-- Width of the stroke used to draw the circles. -->
    <attr name="strokeWidth" />
    <!-- View background -->
    <attr name="android:background"/>
  </declare-styleable>
</resources>